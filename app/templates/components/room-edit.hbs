<div class="room__icon" {{action 'onSelect'}} style={{iconStyle}}>

  {{room.label}}<br>

  <em>{{room.activeSchedule.label}}</em><br>

  {{#if allowEdits}}
  {{else}}

    {{room.temp}}Â°C<br>

    {{room.relayState}}

  {{/if}}

</div>

{{#if allowEdits}}

  <div class="room__devices">

    {{#each room.thermostats as |device|}}

      {{device-view device=device}}

    {{/each}}

    {{#each room.relays as |device|}}

      {{device-view device=device}}

    {{/each}}

  </div>

  {{#if scheduleList}}

    {{schedule-list
      list=scheduleList
      selectedSchedule=room.activeSchedule
      schedulesAreSettable=true
      createNewSchedule='createNewSchedule'
      createNewEvent='createNewEvent'
      copyEvent='copyEvent'
      onScheduleSelect='onScheduleSelect'
      onScheduleSet='onScheduleSet'
    }}

  {{/if}}

{{/if}}
